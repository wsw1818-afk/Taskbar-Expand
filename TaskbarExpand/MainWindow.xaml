<Window x:Class="TaskbarExpand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskbarExpand"
        mc:Ignorable="d"
        Title="Taskbar Expand"
        Width="280"
        Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MinWidth="200"
        MinHeight="40"
        WindowStartupLocation="Manual"
        Left="100"
        Top="100"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Windows 11 ìƒ‰ìƒ -->
        <Color x:Key="TaskbarBackgroundColor">#E8202020</Color>
        <Color x:Key="TaskbarHoverColor">#40FFFFFF</Color>
        <Color x:Key="TaskbarSelectedColor">#60FFFFFF</Color>
        <Color x:Key="TaskbarBorderColor">#30FFFFFF</Color>

        <SolidColorBrush x:Key="TaskbarBackgroundBrush" Color="{StaticResource TaskbarBackgroundColor}"/>
        <SolidColorBrush x:Key="TaskbarHoverBrush" Color="{StaticResource TaskbarHoverColor}"/>
        <SolidColorBrush x:Key="TaskbarSelectedBrush" Color="{StaticResource TaskbarSelectedColor}"/>
        <SolidColorBrush x:Key="TaskbarBorderBrush" Color="{StaticResource TaskbarBorderColor}"/>

        <!-- Windows 11 ìŠ¤íƒ€ì¼ ë¦¬ìŠ¤íŠ¸ ì•„ì´í…œ -->
        <Style x:Key="WindowListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="10,8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource TaskbarHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource TaskbarSelectedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ìŠ¤í¬ë¡¤ë°” ìŠ¤íƒ€ì¼ (Windows 11) -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
        </Style>

        <!-- Windows 11 ìŠ¤íƒ€ì¼ ê°€ë¡œ ëª¨ë“œ ì•„ì´í…œ -->
        <Style x:Key="HorizontalWindowListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="10,6">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource TaskbarHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource TaskbarSelectedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ê°€ë¡œ ëª¨ë“œìš© ì•„ì´í…œ í…œí”Œë¦¿ -->
        <DataTemplate x:Key="HorizontalItemTemplate">
            <Border x:Name="ItemBorder"
                    Background="Transparent"
                    CornerRadius="4"
                    Padding="10,6"
                    Cursor="Hand"
                    MouseLeftButtonUp="HorizontalItem_MouseLeftButtonUp"
                    ToolTip="{Binding Title}">
                <!-- ì»¨í…ìŠ¤íŠ¸ ë©”ë‰´ -->
                <Border.ContextMenu>
                    <ContextMenu Style="{StaticResource WindowContextMenuStyle}">
                        <MenuItem Header="ì°½ ë‹«ê¸°" Click="ContextMenu_CloseWindow_Click" Tag="{Binding Handle}" Style="{StaticResource ContextMenuItemStyle}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding Icon}"
                           Width="20" Height="20"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock Text="{Binding Title}"
                               MaxWidth="140"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontFamily="Segoe UI"
                               Foreground="White"/>
                </StackPanel>
            </Border>
            <DataTemplate.Triggers>
                <Trigger SourceName="ItemBorder" Property="IsMouseOver" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- ê°€ë¡œ ëª¨ë“œìš© íŒ¨ë„ -->
        <ItemsPanelTemplate x:Key="HorizontalItemsPanel">
            <WrapPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>

        <!-- ì„¸ë¡œ ëª¨ë“œìš© íŒ¨ë„ -->
        <ItemsPanelTemplate x:Key="VerticalItemsPanel">
            <VirtualizingStackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>

        <!-- Windows 11 ë²„íŠ¼ ìŠ¤íƒ€ì¼ -->
        <Style x:Key="Win11ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="8,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource TaskbarHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource TaskbarSelectedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ë‹«ê¸° ë²„íŠ¼ ìŠ¤íƒ€ì¼ -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource Win11ButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="8,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ì»¨í…ìŠ¤íŠ¸ ë©”ë‰´ ìŠ¤íƒ€ì¼ (Windows 11) -->
        <Style x:Key="WindowContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="#E8202020"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel IsItemsHost="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ContextMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="MenuBorder"
                                Background="Transparent"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MenuBorder" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ë©”ì¸ ì»¨í…Œì´ë„ˆ -->
    <Grid>
        <!-- ë¦¬ì‚¬ì´ì¦ˆ ê·¸ë¦½ -->
        <Rectangle x:Name="ResizeLeft" Width="5" HorizontalAlignment="Left" Cursor="SizeWE" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeRight" Width="5" HorizontalAlignment="Right" Cursor="SizeWE" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeTop" Height="5" VerticalAlignment="Top" Cursor="SizeNS" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeBottom" Height="5" VerticalAlignment="Bottom" Cursor="SizeNS" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeTopLeft" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeTopRight" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="SizeNESW" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeBottomLeft" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>
        <Rectangle x:Name="ResizeBottomRight" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE" Fill="Transparent" MouseLeftButtonDown="Resize_MouseLeftButtonDown"/>

        <!-- ì„¸ë¡œ ëª¨ë“œ ì»¨í…Œì´ë„ˆ (Windows 11 ìŠ¤íƒ€ì¼) -->
        <Border x:Name="VerticalModeContainer"
                Background="{StaticResource TaskbarBackgroundBrush}"
                BorderBrush="{StaticResource TaskbarBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- í—¤ë” (Windows 11 ìŠ¤íƒ€ì¼) -->
                <Border x:Name="HeaderBorder"
                        Grid.Row="0"
                        Background="Transparent"
                        CornerRadius="8,8,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="12,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="ì‹¤í–‰ ì¤‘ì¸ ì°½"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="â–¦"
                                    Width="32" Height="32"
                                    FontSize="14"
                                    Margin="0,0,4,0"
                                    Style="{StaticResource Win11ButtonStyle}"
                                    Click="GroupByAppButton_Click"
                                    ToolTip="ê°™ì€ ì•±ë¼ë¦¬ ê·¸ë£¹í™”"/>

                            <Button x:Name="ToggleAutoHideButton"
                                    Content="ðŸ“Œ"
                                    Width="32" Height="32"
                                    FontSize="14"
                                    Margin="0,0,4,0"
                                    Style="{StaticResource Win11ButtonStyle}"
                                    Click="ToggleAutoHideButton_Click"
                                    ToolTip="ìžë™ ìˆ¨ê¹€ ì¼œê¸°/ë„ê¸°"/>

                            <Button x:Name="ToggleModeButton"
                                    Content="â‡„"
                                    Width="32" Height="32"
                                    FontSize="16"
                                    Margin="0,0,4,0"
                                    Style="{StaticResource Win11ButtonStyle}"
                                    Click="ToggleModeButton_Click"
                                    ToolTip="ê°€ë¡œ/ì„¸ë¡œ ì „í™˜"/>

                            <Button Content="âœ•"
                                    Width="32" Height="32"
                                    FontSize="14"
                                    Style="{StaticResource CloseButtonStyle}"
                                    Click="CloseButton_Click"
                                    ToolTip="ë‹«ê¸°"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- êµ¬ë¶„ì„  -->
                <Rectangle Grid.Row="0" Height="1" VerticalAlignment="Bottom" Fill="{StaticResource TaskbarBorderBrush}" Margin="12,0"/>

                <!-- ìœˆë„ìš° ë¦¬ìŠ¤íŠ¸ -->
                <ListBox x:Name="WindowListBox"
                         Grid.Row="1"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"
                         VirtualizingStackPanel.ScrollUnit="Pixel"
                         ItemContainerStyle="{StaticResource WindowListItemStyle}"
                         SelectionChanged="WindowListBox_SelectionChanged"
                         AllowDrop="True"
                         PreviewMouseMove="ListBox_PreviewMouseMove"
                         Drop="ListBox_Drop"
                         DragOver="ListBox_DragOver"
                         Margin="4,8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid x:Name="ItemGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- ì»¨í…ìŠ¤íŠ¸ ë©”ë‰´ -->
                                <Grid.ContextMenu>
                                    <ContextMenu Style="{StaticResource WindowContextMenuStyle}">
                                        <MenuItem Header="ì°½ ë‹«ê¸°" Click="ContextMenu_CloseWindow_Click" Tag="{Binding Handle}" Style="{StaticResource ContextMenuItemStyle}"/>
                                    </ContextMenu>
                                </Grid.ContextMenu>

                                <!-- ì•„ì´ì½˜ -->
                                <Image Grid.Column="0"
                                       Source="{Binding Icon}"
                                       Width="24" Height="24"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!-- í…ìŠ¤íŠ¸ -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Title}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           FontSize="13"
                                           FontFamily="Segoe UI"
                                           Foreground="White"
                                           ToolTip="{Binding Title}"/>

                                <!-- ë‹«ê¸° ë²„íŠ¼ -->
                                <Button x:Name="CloseWindowButton"
                                        Grid.Column="2"
                                        Content="âœ•"
                                        Width="24" Height="24"
                                        FontSize="10"
                                        VerticalAlignment="Center"
                                        Click="CloseWindowButton_Click"
                                        Tag="{Binding Handle}"
                                        Visibility="Hidden"
                                        Style="{StaticResource CloseButtonStyle}"/>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger SourceName="ItemGrid" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CloseWindowButton" Property="Visibility" Value="Visible"/>
                                </Trigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- í‘¸í„° -->
                <Border x:Name="FooterBorder"
                        Grid.Row="2"
                        Background="Transparent"
                        CornerRadius="0,0,8,8">
                    <StackPanel Margin="12,8">
                        <Rectangle Height="1" Fill="{StaticResource TaskbarBorderBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="StatusTextBlock"
                                   Text="ë¡œë”© ì¤‘..."
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="#A0FFFFFF"
                                   HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ê°€ë¡œ ëª¨ë“œ ì»¨í…Œì´ë„ˆ (Windows 11 ìŠ¤íƒ€ì¼) -->
        <Border x:Name="HorizontalModeContainer"
                Background="{StaticResource TaskbarBackgroundBrush}"
                BorderBrush="{StaticResource TaskbarBorderBrush}"
                BorderThickness="0,1,0,0"
                Visibility="Collapsed">
            <DockPanel LastChildFill="True">
                <!-- ì˜¤ë¥¸ìª½ ë²„íŠ¼ë“¤ -->
                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="8,0,12,0">
                    <Button Content="â–¦"
                            Width="36" Height="36"
                            FontSize="14"
                            Margin="0,0,4,0"
                            Style="{StaticResource Win11ButtonStyle}"
                            Click="GroupByAppButton_Click"
                            ToolTip="ê°™ì€ ì•±ë¼ë¦¬ ê·¸ë£¹í™”"/>
                    <Button x:Name="HorizontalAutoHideButton"
                            Content="ðŸ“Œ"
                            Width="36" Height="36"
                            FontSize="14"
                            Margin="0,0,4,0"
                            Style="{StaticResource Win11ButtonStyle}"
                            Click="ToggleAutoHideButton_Click"
                            ToolTip="ìžë™ ìˆ¨ê¹€ ì¼œê¸°/ë„ê¸°"/>
                    <Button Content="â‡…"
                            Width="36" Height="36"
                            FontSize="16"
                            Margin="0,0,4,0"
                            Style="{StaticResource Win11ButtonStyle}"
                            Click="ToggleModeButton_Click"
                            ToolTip="ì„¸ë¡œ ëª¨ë“œë¡œ ì „í™˜"/>
                    <Button Content="âœ•"
                            Width="36" Height="36"
                            FontSize="14"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="ì•± ì¢…ë£Œ"/>
                </StackPanel>

                <!-- ê°€ë¡œ ëª¨ë“œ ìœˆë„ìš° ë¦¬ìŠ¤íŠ¸ -->
                <ItemsControl x:Name="HorizontalWindowListBox"
                              Background="Transparent"
                              BorderThickness="0"
                              ItemTemplate="{StaticResource HorizontalItemTemplate}"
                              Margin="8,2,0,2"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="2"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </DockPanel>
        </Border>
    </Grid>
</Window>
